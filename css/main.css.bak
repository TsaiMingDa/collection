 .main {
     position: relative;
     top: 105px;
 }

 .navigation {
     position: absolute;
     right: 10px;
     bottom: 60px;
 }

 .wrap {
     display: flex;
     /*align-items: center;*/
     max-width: 800px;
     margin: auto;
     outline: 1px solid;
 }

 .image {
     flex: 4;
     overflow: hidden;
     outline: 1px solid;
     position: relative;
 }

 .content {
     flex: 5;
     min-height: 400px;
     outline: 1px solid;
     text-align: center;
     overflow: hidden;
     position: relative;
 }

 .works img {
     position: absolute;
     max-width: 100%;
     transition: all 600ms cubic-bezier(1, 0, 0, 1);
     bottom: 120%;
 }

 .works.active img {
     bottom: 30%;
 }

 .text {
     margin-top: 10%;
     width: 100%;
     position: absolute;
 }

 .content .works {
     transition: all 600ms cubic-bezier(1, 0, 0, 1);
     position: relative;
     top: 120%;
 }

 .content .works.active {
     top: 10%;
 }

 .title {
     font-size: 36px;
     font-weight: 900;
     margin-bottom: 12px;
 }

 .page {
     position: absolute;
     right: 10px;
     top: 10px;
     font-size: 25px;
     font-weight: 500;
     color: #999;
 }

 .skill {
     width: 55%;
     margin: auto;
     border: solid;
     border-width: 0.5px 0;
 }

 .description {
     margin: 35px 15px;
 }

 .link {
     width: 30%;
     border-radius: 40px;
     border: 1px solid;
     margin: auto;
     display: block;
     padding: 15px;
 }

 .arrow-right {
     margin: 10px;
     display: inline-block;
     width: 0px;
     height: 0px;
     cursor: pointer;
     border-style: solid;
     border-width: 50px 0 50px 50px;
     border-color: transparent transparent transparent #007bff;
 }

 .arrow-left {
     margin: 10px;
     display: inline-block;
     width: 0px;
     height: 0px;
     border-style: solid;
     cursor: pointer;
     border-width: 50px 50px 50px 0;
     border-color: transparent #007bff transparent transparent;
 }

 .disabled {
     opacity: 0.2;
     pointer-events: none;
 }